/**
 * ADDITIONAL STYLES ADDED HERE
 */

#locations-box {
  width: 250px;
  margin: 0;
  display: none;

  .fa { float: left; }
}

#locations_chooser {
	float: left;
}

select#locations, #locations_choice {
  // color: #35A8A6;
  width: 200px;
  background-color: transparent;
  border: none;
  font-size: 15px;
  color: #afafaf;
  margin: 0;
  background-image: none;
  padding: 0 0 0 10px;
}

.price_equiv {
  position: relative;
  font-size: 60%;
  vertical-align: baseline;
  top: -0.5em;
}

.menu-footer-auth {
	float: right; 

	li {
		float: left;
		line-height: 50px;

		&:last-of-type { margin-right: 0; }
	}
}

#locations-box {
	.fa { margin-top: 10px; }
	.fa-angle-down { margin-top: 20px; }
}

.footer-default__header { line-height: 50px; }

.blog-sidebar h4 { margin-top: 0; }

/**
 * HERO
 */
.hero--xsmall { height: 400px; }
.hero--product { height: 750px; }

/**
 * EXPANDABLE CONTENT AREAS - using faq layout/sidebar
 */
.faq-categories li:hover { text-decoration: underline; }


.expandable { margin-bottom: 90px; }
// @extends .flex-slidebar, .nav-sidebar
.expandable-nav { width: 28%; }
// @extends .flex-content
.expandable-content {
	width: 72%; 
	padding: 52px 60px 30px 80px; 
}

.links-secondary a { color: #ecb351; }
.expandable-categories a:hover { text-decoration: underline; color: #eaad43; }

.expandable.expandable--full.flex-columns {
	.wrapper { width: 100% !important; }

	.expandable-content.flex-content { width: 100%; padding: 50px 0 0; }

	.list-toggle__title span { color: #35a8a6; }

	.list-toggles .list-toggle { margin-bottom: 30px; }
}
	
.list-toggle__content ul {
	list-style-type: disc;
}

/**
 * PRESS/MEDIA
 */
.list-toggles .list-toggle__title span + time {
	font-weight: 300;
	color: #9a9a9a;
	padding-left: 10px;
}
.recent-press {
	width: 100%;
	float: left;
	display: table;
	margin-bottom: 20px;

	a.logo { 
		width: 20%;
		display: block;
		float: left;

	}
	
	.excerpt { 
		width: 80%;
		display: table-cell;
		vertical-align: middle;
		color: #9a9a9a;
		font-size: 14px;
		font-style: italic;

		time {
			display: block;
			font-style: normal;
		}
	}
}

/**
 * PRODUCTS
 */

#ProductPrice.h4 {
	font-size: 28px;
	font-family: "din-next-pro";
	font-weight: normal;
}

.product-grid-item__price {
	&.primary { color: #35a8a6; }
	&.h1 { font-size: 60px; }
	&.h5 {
		font-size: 21px;
		font-weight: 500;
	}
	&.tight { letter-spacing: -3px; }
}

.product-single__thumbnails li .product-single__thumbnail img { max-width: 100px; }


/**
 * PRODUCT REVIEWS
 */
#shopify-product-reviews {
	color: #a8a8a8;

	.spr-summary-actions-newreview {
		text-decoration: underline;
	}

	.spr-container { 
		padding: 0;
		border: none;
	}

	.spr-icon { color: #ecb660; }

	.spr-review-reportreview {
		opacity: 0;
		text-decoration: underline;
	}

	.spr-review:hover {
		.spr-review-reportreview { opacity: 1; }
	}
}


/**
 * MOBILE
 */
@media only screen and (max-width: 768px) {

	.hero--xsmall { height: 300px; }
	.hero--product { height: 400px; }

	.footer-social .grid__item {
	  padding-left: 0 !important;
	  text-align: center;
	}

	/**
	 * FAQ, CONTACT
	 */
	.nav-sidebar__header, .nav-sidebar__content { padding: 20px 40px; }
	.faq.flex-columns,
	.contact.flex-columns {
	  display: block;
	}

	.flex-columns .flex-sidebar { width: 100%; }
	.faq-content, .contact-content { width: 100% !important; padding: 40px 20px 20px !important; }
	.list-toggles { margin-left: 0; }
	.list-toggles .list-toggle__title { font-size: 16px; line-height: 1.5; }
	.list-toggles .list-toggle__title .fa { top: 5px; }
	.list-toggles .list-toggle__title span + time { 
		font-size: 12px;
		padding: 5px 0 0;
		display: block;
		clear: both;
	}

	.recent-press {
		a.logo { width: 100%; }
		.excerpt { width: 100%; float: left; }
	}
}