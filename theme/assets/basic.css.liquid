#basic-modal-content {
  display:none;
}
/* Overlay */
#simplemodal-overlay {
 background-color:#000; 
 cursor:wait;
}
/* Container */
#simplemodal-container {
  height:auto; 
  width:600px; 
  color: {{settings.wishlist_content_text_colour}}; 
  background-color:{{settings.wishlist_popup_bg_colour}}; 
  border:7px solid {{settings.wishlist_content_border_colour}};
  padding:12px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
}
#basic-modal-content {
  text-align: left;
}
#simplemodal-container a.modalCloseImg {
  background: url({{ 'spurit.x.png' | asset_url }}) no-repeat; 
  width:25px; 
  height:29px; 
  display:inline; 
  z-index:3200; 
  position:absolute; 
  top:-15px; 
  right:-16px; 
  cursor:pointer;
}
#simplemodal-container h2 {
  color: {{settings.wishlist_content_header_colour}};
}
table.wishlist-products {
  margin: 0 0 1.2em;
  width: 100%;
}
table.wishlist-products {
  border-collapse: collapse;
  border-spacing: 0;
}
table.category_wishlist {
  width: 600px;
  margin: 0px;
}
table.category_wishlist, table.category_wishlist tbody, table.category_wishlist tr, table.category_wishlist td {
  border: none;
}
table.category_wishlist label {
    float: none;
    padding: 0;
    margin: 0;
}
table.category_wishlist td, table.wishlist-products td {
  padding: 3px;
  text-align: left;
  vertical-align: top;
}
/*Button*/
#p-wishlist {
  float: {{settings.wishlist_btn_float_list}};
}
#p-wishlist-product {
  margin-top: 5px;
  margin-bottom: 5px;
  float: {{settings.wishlist_btn_float}};
}
.add-to-wishlist-btn-image {
  background: {{settings.wishlist_btn_colour}} url({{ 'add-to-wishlist.png' | asset_url }}) no-repeat center;
  display: inline-block;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  border: solid 1px {{settings.wishlist_btn_colour}};
  color: {{settings.wishlist_btn_text_colour}};
  padding: 5px 10px 4px 10px;
  text-decoration: none;  
  font-weight: bold;
  text-align: center;
  cursor: pointer;
  margin-left: 3px;
  margin-right: 3px;  
}
.add-to-wishlist-btn-image:hover
{
  border: solid 1px {{settings.wishlist_btn_hover_colour}};
  background: {{settings.wishlist_btn_hover_colour}} url({{ 'add-to-wishlist.png' | asset_url }}) no-repeat center;
  color: {{settings.wishlist_btn_hover_text_colour}};
}

.add-to-wishlist-btn,
input.add-to-wishlist-btn[type=submit],
a.add-to-wishlist-btn{
  display: inline-block;
  background: {{settings.wishlist_btn_colour}} url({{ 'wishlist-btn-small-depth.png' | asset_url }}) 0 100% repeat-x;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  border: solid 1px {{settings.wishlist_btn_colour}};
  color: {{settings.wishlist_btn_text_colour}};
  padding: 5px 8px;
  text-decoration: none;  
  font-weight: bold;
  text-align: center;
  cursor: pointer;
  font-size: {{settings.wishlist_btn_font_size}}px;
}

.add-to-wishlist-btn:hover,
input.add-to-wishlist-btn[type=submit]:hover,
a.add-to-wishlist-btn:hover{
  border: solid 1px {{settings.wishlist_btn_hover_colour}};
  background: {{settings.wishlist_btn_hover_colour}} url({{ 'wishlist-btn-small-depth.png' | asset_url }}) 0 100% repeat-x;
  color: {{settings.wishlist_btn_hover_text_colour}};
}

/*Notice Message*/
span#resultMessage {
  color: #ff0000;
}
/*TABLE wishlist-products*/
table.wishlist-products td.main {
    padding: 0px;
    border: none;
}
table.wishlist-products th {
    background: {{settings.wishlist_table_bg_colour}} url({{ 'wishlist-btn-small-depth.png' | asset_url }}) 0 100% repeat-x;
    border: none;
    height: 20px;
    padding: 4px 8px;
}
table.wishlist-products-list {
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
}
table.wishlist-products-list td {
    border: 1px solid {{settings.wishlist_content_border_colour}};
    border-top: none;
}
table.wishlist-products-list {
    margin: 0px;
}
.product-wishlist {
    float: left;
    margin: 0px;
    overflow: hidden;
    padding: 0;
    position: relative;
    text-align: center;
    width: 162px;
}
.product-wishlist .image {
    border: 1px solid {{settings.wishlist_content_border_colour}};
    height: 160px;
    margin-bottom: 10px;
    overflow: hidden;
}
.product-wishlist .image img {
    max-width: 160px;
}
.product-wishlist .title {
    display: block;
    font-size: 12px;
    font-weight: 700;
    line-height: 16px;
}
.product-wishlist .price {
    display: block;
    font-size: 11px;
    font-weight: normal;
    line-height: 16px;
}
.wishlit_comment {
    width: 99%;
    padding: 0px;
    height: 120px;
}
p.clearfix-button {
    margin-top: 8px;
}
/*add to cart msg*/
#add-to-cart-msg-wishlist {
    background: none repeat scroll 0 0 #FFF7A0;
    display: none;
    margin: 0;
    padding: 10px;
    margin-top: 5px;
    color: #000;
}
/*loading*/
.wl_loading {
    background: #f3f3f3 url({{ 'wishlist-loading.gif' | asset_url }}) no-repeat center;
    width: 78px;
    height: 48px;
    position: fixed;
    top: 40%;
    left: 50%;
    margin-top: 39px;
    margin-left: 24px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
    border: solid 1px #3B3B3B; 
    display: none;
    z-index: 1000;
}
.delete-wishlist {
    background: url({{ 'wishlist-delete.png' | asset_url }}) no-repeat center;
    width: 14px;
    height: 12px;
    margin-left: 5px;
    cursor: default;
    visibility: hidden;
    display: inline-block;
    margin-top: -1px;
}
.delete-wishlist:hover {
    background: url({{ 'wishlist-delete-active.png' | asset_url }}) no-repeat center;
}
/*Trash*/
div.item_trash {
  margin-top: 8px;
}
div.item_trash b {
  float: left;
  margin-top: 2px;
  margin-right: 4px;
}
div.item_trash span {
  display: inline-block;
  background: transparent url({{ 'icon_trash.png' | asset_url }}) no-repeat center;
  width: 16px;
  height: 16px;
  cursor: pointer;
  padding-top: 3px;
}
/*Select Box*/
div.wishlist-categories-select {
    display: none;
}
div#wishlistBox select {
    width: 150px;
}
/*Bottom Actions*/
div#all-actions {
    display: none;
}
div.delete-block {
    float: right;
}
div.copy-move {
    float: left;   
}
div.copy-move select {
    width: 200px;
    margin-top: 3px;
}
div.move-copy-block {
    float: left;
}
/*wishlist-page-title*/
#wishlist-page-title {
    font-size: 14px;
    margin: 0 0 20px;
    padding: 0px;
}
#wishlist-page-title h2 {
    color: {{settings.wishlist_content_header_colour}};
    border-bottom: 1px dotted {{settings.wishlist_content_border_colour}};
}
/*Nav Tabs*/
#nav-wishlist {
    font-size: 12px;
    height: 25px;
    line-height: normal;
    padding-top: 14px;
    width: 100%;
    z-index: 9;
    margin-bottom: 20px;
    border-bottom: 1px solid {{settings.wishlist_content_border_colour}};
}
#navlist-wishlist {
    float: left;
    position: absolute;
    z-index: 4;
    padding: 0!important;
}
#navlist-wishlist, #secondary {
    margin: 0;
    padding: 0;
}
#navlist-wishlist li, #secondary li {
    float: left;
    list-style-type: none!important;
    margin: 0!important;
    padding: 0!important;
}
#navlist-wishlist a:link, #navlist-wishlist a:visited, #secondary a {
    color: {{settings.wishlist_content_link_colour}};
    display: block;
    line-height: 13px;
    margin: 0 5px 0;
    padding: 6px;
    text-decoration: none;
    font-weight: normal;
}
#navlist-wishlist a#current:link, #navlist-wishlist a#current:visited {
    background-color: {{settings.wishlist_tab_bg_colour}};
    color: {{settings.wishlist_content_link_colour}};
}
#navlist-wishlist a#current:link, #navlist-wishlist a#current:visited {
    border-left: 1px solid {{settings.wishlist_content_border_colour}};
    border-radius: 5px 5px 0 0;
    border-right: 1px solid {{settings.wishlist_content_border_colour}};
    border-top: 1px solid {{settings.wishlist_content_border_colour}};
    font-weight: bold;
}
#navlist-wishlist a:hover {
    color: {{settings.wishlist_content_link_hover_colour}};
}
/*Wishlist Page*/
div.wishlist-page {
    color: {{settings.wishlist_content_text_colour}};
    background-color: transparent;
}
div.wishlist-page a {
    color: {{settings.wishlist_content_link_colour}};
}
div.wishlist-page a:hover {
    color: {{settings.wishlist_content_link_hover_colour}};
}
.clearfix:after {
    clear: both;
}
.clearfix:before, .clearfix:after {
    content: " ";
    display: block;
    height: 0;
    overflow: hidden;
}
.clearfix:before, .clearfix:after {
    content: " ";
    display: block;
    height: 0;
    overflow: hidden;
}