<section class="hero hero--small">
  <div class="hero__viewport">
    <div class="hero__inner hero__inner--light">
      <div class="hero__body wrapper table">
        <div class="table-cell text-center">
          <h1 class="light baseline">{{ page.title }}</h1>

          {% if page.metafields.press_mediakit.pdf %}
          <a href="{{ page.metafields.press_mediakit.pdf }}" target="_blank" class="btn btn-primary">Download Media Kit</a>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="hero__image" style="background-image: url('{{ page.metafields.hero_image.url }}');"></div>
  </div>
</section>

<section class="section-xlarge">
	<div class="wrapper">
		<h2 class="light mb30 text-center">Recent Press</h2>
		{% for article in blogs['Press'].articles %}
			<div class="recent-press">
				<a class="logo" href="{{ article.metafields.press.url }}" target="_blank"><img src="{{ article.metafields.press.logo }}" alt=""></a>
				<div class="excerpt">
					<time pubdate datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
					  {{ article.published_at | date: '%b %d, %Y' }}
					</time>
					{{ article.content }}
				</div>
			</div>
		{% endfor %}
	</div>
</section>

<section class="expandable expandable--full flex-columns">
	<div class="wrapper">
		<ul class="expandable-content flex-content pt0">
			<h2 class="light mb30 text-center">Press Releases</h2>
			<li>
				<div class="list-toggles">
					{% for article in blogs['press_releases'].articles %}
			  	  <div class="list-toggle">
			  	    <div class="list-toggle__title" data-control-sibling data-control-toggle-icons="fa-plus-circle, fa-minus-circle">
			  	      <i class="fa fa-minus-circle"></i>
			  	      <span>{{ article.title }}</span>
			  	      <time pubdate datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
			  	        {{ article.published_at | date: '%b %d, %Y' }}
			  	      </time>
			  	    </div>
			  	    <div class="list-toggle__content">
			  	      {{ article.content }}
			  	    </div>
			  	  </div>
					{% endfor %}
				</div>
			</li>
		</ul>
	</div>
</section>

<section class="jumbotron">
  <div class="wrapper text-center">
    <h3 class="light baseline mb10">Press/Media Inquiries</h3>
    <h6 class="light baseline"></h6>
    <a href="/pages/contact/#contactFormWrapper" class="btn btn-outline-white btn-icon btn-icon--left mt30"> <i class="fa fa-envelope-o"></i> <span>Contact Us</span> </a>
  </div>
</section>