{% elsif template contains 'product' %}

  <!-- PRODUCT -->
  <section class="hero">
    <div class="hero__viewport">
      <div class="hero__inner hero__inner--light">
        <div class="hero__body wrapper table">
          <div class="table-cell text-center">
            <h4 class="alt sans baseline">{{ product.metafields.hero.subtitle }}</h4>
            <h1 class="large light mt0">{{ product.title }}</h1>
            {% if product.metafields.hero.video %}
              <a href="#" class="btn btn-transparent-primary btn-icon mt20">
                <span>Watch the overview</span>
                <i class="fa fa-r fa-play-circle"></i>
              </a>
            {% endif %}
            
          </div>
        </div>
      </div>
      <div class="hero__image" style="background-image:url('{{ product.metafields.hero.image }}')"></div>
    </div>
  </section>

{% elsif template contains 'collection' %}
     
