<section id="hero">
  <div class="hero-overlay"></div>
{% if template contains 'index' %}
    
     <!-- HOMEPAGE -->
       <div class="hero-image" style="background-image:url('{{ 'hero-image--home.jpg' | asset_url }}')">
         <div class="inner">
           <h1 itemprop="name">BioLite</h1>
           <h2 itemprop="description">Our mission is to bring energy everywhere</h2>
         </div>
       </div>

{% elsif template contains 'product' %}

     <!-- PRODUCT -->
       <div class="hero-image" style="background-image:url('{{ 'hero-image--home.jpg' | asset_url }}')">
         <div class="inner">
           <h1 itemprop="name">{{ product.title }}</h1>
           <h2 itemprop="description">{{ product.description }}</h2>
         </div>
       </div>
{% elsif template contains 'collection' %}
     
     <!-- COLLECTIONS -->
       <div class="hero-image" style="background-image:url('{{ 'hero-image--home.jpg' | asset_url }}')">
         <div class="inner">
           <h1 itemprop="name">{{ collection.title }}</h1>
           <h2>{{ collection.description }}</h2>
         </div>
       </div>

{% else %}

     <!-- ALL OTHER PAGES -->
       <div class="hero-image" style="background-image:url('{{ 'hero-image--home.jpg' | asset_url }}')">
         <div class="inner">
           <h1 itemprop="name">{{ page.title }}</h1>
         </div>
       </div>

{% endif %}

</section>