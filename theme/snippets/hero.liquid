{% elsif template contains 'article' %}

  <section class="hero hero--small">
    <div class="hero__viewport">
      <div class="hero__inner hero__inner--light">
        <div class="hero__body wrapper table">
          <div class="table-cell text-center">
            <h1 class="light mb0">{{ article.title }}</h1>

            <footer class="mt30">
              <p>
                Posted by <strong>{{ article.author }}</strong> at
                <strong><time pubdate datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                  {{ article.published_at | date: '%b %d, %Y' }}
                </time></strong>
              </p>
            </footer>
          </div>
        </div>
      </div>
      {{ article.metafields.hero_image[url] }}
      <div class="hero__image" style="background-image: url('{{ article.metafields.hero.image }}');"></div>
    </div>
  </section>

{% elsif template contains 'faq' or template contains 'contact' %}

  <section class="hero hero--xsmall">
    <div class="hero__viewport">
      <div class="hero__inner hero__inner--light">
        <div class="hero__body wrapper table">
          <div class="table-cell text-center">
            <h1 class="light mb0">{{ page.title }}</h1>
          </div>
        </div>
      </div>
      <div class="hero__image" style="background-image: url('{{ page.metafields.hero.image }}');"></div>
    </div>
  </section>

{% else %}

  <section class="hero hero--small">
    <div class="hero__viewport">
      <div class="hero__inner hero__inner--light">
        <div class="hero__body wrapper table">
          <div class="table-cell text-center">
            <h1 class="light baseline">{{ page.title }}</h1>

            {% if page.metafields.hero_text.subtitle %}
            <h3 class="white light baseline"><em>{{ page.metafields.hero_text.subtitle }}</em></h3>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="hero__image" style="background-image: url('{{ page.metafields.hero.image }}');"></div>
    </div>
  </section>

{% endif %}